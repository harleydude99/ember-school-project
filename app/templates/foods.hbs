<div class="flex-container">
  <div class="flex-item">
    <h1>{{appName}}</h1>
    <p/>
    Our restaurant is {{restaurant.name}}. We've been open for {{restaurant.yearsOpen}} year(s).
    <p id="explanation">Menu Tracker helps you see what dishes are available today.</p>
    <p>{{menuLength}} foods total</p>
    <p>{{availableItems.length}} foods available</p>
    <p/>
    <ul>
      {{#each model as |food|}}
        <li class="{{if food.isAvailable '' 'not-available'}}">
          {{#link-to 'foods.food' food.id}}{{food.name}}{{/link-to}}
          {{#if food.isAvailable}}
              !<button {{action "toggleAvailability" food}}>Make Unavailable</button>
          {{else}}
              <button {{action "toggleAvailability" food}}>Make Available</button>
          {{/if}}
        </li>
      {{/each}}
    </ul>
    <hr/>
    {{input value=newItem}}
    <button {{action 'saveNewItem'}}>Save</button>
  </div>
  <div class="flex-item">
    {{outlet}}
  </div>
</div>
